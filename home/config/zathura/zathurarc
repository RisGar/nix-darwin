# Zathura configuration file
# See man `man zathurarc'

# open document in fit-width mode by default
set adjust-open "best-fit"

# one page per row by default
set pages-per-row 1

# stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 0.01

# zoom settings
set zoom-min 10

# guioptions 
# 'c', => command line 
# 's', => statusbar 
# 'h', => horizontal scrollbar 
# 'v', => vertical scrollbar 
set guioptions "cs"

# onedark
# set notification-error-bg "#3e4452"
# set notification-error-fg "#c678dd"
# set notification-warning-bg "#3e4452"
# set notification-warning-fg "#c678dd"
# set notification-bg "#3e4452"
# set notification-fg "#c678dd"
# set completion-group-bg "#3e4452"
# set completion-group-fg "#e5c07b"

set font "maple mono nf cn 15"
set default-bg "rgba(40, 44, 52, 0.9)" 
set default-fg "#ABB2BF" 

# this somehow inherits the bg with working transparency
set statusbar-bg nil
set statusbar-fg "#ABB2BF"

# this somehow inherits the bg with working transparency
set inputbar-bg nil
set inputbar-fg "#ABB2BF"

set notification-error-bg "#AC4142" 
set notification-error-fg "#151515"

set notification-warning-bg "#AC4142"
set notification-warning-fg "#151515" 

set highlight-color "rgba(229, 192, 123, 0.5)" 
set highlight-active-color "rgba(224, 108, 117, 0.5)" 

set completion-highlight-bg "#E5C07B"
set completion-highlight-fg "#3E4452" 

set completion-bg "#21252B" 
set completion-fg "#ABB2BF"

set notification-bg "#90A959" 
set notification-fg "#151515" 

# this somehow inherits the bg with working transparency
set index-bg nil
set index-fg "#ABB2BF" 

set index-active-bg "#61AFEF"
set index-active-fg "#ABB2BF"

set recolor "false"
set recolor-lightcolor "rgba(40, 44, 52, 0.9)"
set recolor-darkcolor "#ABB2BF"
set recolor-reverse-video "true"
set recolor-keephue "true"

set selection-clipboard clipboard

set render-loading "false"
set scroll-step 50


